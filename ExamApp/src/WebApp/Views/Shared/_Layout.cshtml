<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/./assets/css/table.css" />
	<link rel="stylesheet" href="~/./assets/css/layout.css" />
	<link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap"
		  rel="stylesheet" />
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200..1000&family=Nunito:ital@0;1&display=swap"
		  rel="stylesheet" />
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
	@RenderSection("Style", false)
	<title>Document</title>
</head>
<body>
	<aside class="sidebar">
		<a href="~/#" class="logo"> School </a>

		<div class="sidebar-nav">
			<div class="navbar">
				<p class="header">Menu</p>
				<ul>
					<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "SchoolClass"  ? "active" : "")">
						<a asp-controller="SchoolClass" asp-action="Index">
							<i class="fa-solid fa-school-flag"></i>
							<p>Class</p>
						</a>
					</li>
					<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Lesson"  ? "active" : "")">
						<a asp-controller="Lesson" asp-action="Index">
							<i class="fa-solid fa-book"></i>
							<p>Lessons</p>
						</a>
					</li>
					<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Exam"  ? "active" : "")">
						<a href="~/#">
							<i class="fa-solid fa-pen-to-square"></i>
							<p>Exams</p>
						</a>
					</li>
					<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Teacher"  ? "active" : "")">
						<a asp-controller="Teacher" asp-action="index">
							<i class="fa-solid fa-chalkboard-teacher"></i>
							<p>Teachers</p>
						</a>
					</li>
					<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Student"  ? "active" : "")">
						<a asp-controller="Student" asp-action="index">
							<i class="fa-solid fa-user-graduate"></i>
							<p>Students</p>
						</a>
					</li>
				</ul>
			</div>
			<div class="date">
				<i class="fa-solid fa-calendar-days"></i>
				<p>@DateTime.Now.ToString("M/d/yyyy")</p>
			</div>
		</div>
	</aside>
	<main class="main">
		@RenderBody()


		<footer>Developed By: Tamerlan Aliyev</footer>
	</main>

	<script src="~/./assets/js/table.js"></script>
	@RenderSection("Script", false)

</body>
</html>
